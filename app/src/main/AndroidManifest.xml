<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androiddive.timothy.dive" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="androiddive.timothy.dive.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="androiddive.timothy.dive.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="androiddive.timothy.dive.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="androiddive.timothy.dive.MainActivity" />
        </activity>
        <activity
            android:name="androiddive.timothy.dive.AddTimer"
            android:label="@string/title_activity_add_timer"
            android:parentActivityName="androiddive.timothy.dive.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="androiddive.timothy.dive.MainActivity" />
        </activity>
    </application>

</manifest>
